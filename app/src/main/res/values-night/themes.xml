<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFirstKit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- <item name="android:windowLightStatusBar">true</item> -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="main">
        <item name="android:backgroundTint">@color/mainColor</item>
    </style>

    <style name="secondary1">
        <item name="android:backgroundTint">@color/secondaryColor1</item>
    </style>

    <style name="secondary2">
        <item name="android:backgroundTint">@color/blue2</item>
    </style>

    <style name="buttonBottomSheet">
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="secondaryButton">
        <item name="android:backgroundTint">@color/blue2</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="settingButton">
        <item name="android:tint">@color/text</item>
    </style>

    <style name="buttonBack">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="iconTint">@color/light_green</item>
    </style>
</resources>